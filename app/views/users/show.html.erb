<p>Welcome, <%=@user.name%></p>
<br>
<% flash.each do |key, value| %>
<div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<% if @user.heros.count < 1 %>
    <p>You currently have 0 heroes. Let's fix that! Click 'Create a Hero' to get started.</p>
<% else %>
    <p>You currently have <%=@user.heros.count%> hero(s).</p>
<% end %>
<section>
    <a class="btn btn-info" href="/heros/new">Create a Hero</a>
    <a class="btn btn-info" href="/account/edit">Edit Account</a>
    <form style="display: inline-block;" method="POST" action="/account/delete">
        <input type="hidden" name="_method" value="delete">
        <input type="hidden" name="user_id" value="<%=@user.id%>">
        <input type="submit" class="btn btn-danger" value="Delete Account">
    </form>
</section>
<br>